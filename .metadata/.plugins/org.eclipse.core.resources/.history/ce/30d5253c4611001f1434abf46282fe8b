package numArrays;

public class TransformArrEle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[] = {3,4,9};
		int n=1;
		for(int i=0;i<n;i++) {
			if(arr[i]%2==0) {
				System.out.println(arr[i]-3);
			}
			else if(arr[i]%2!=0) {
				System.out.println(arr[i]+3);
			}
		}

	}

}
