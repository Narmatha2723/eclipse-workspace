package numArrays;

public class TransformArrEle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[] = {3,4,9};
		int n=4;
		for(int j=1;j<=n;j++) {
			for(int i=0;i<n;i++) {
			   if(arr[i]%2==0) {
				arr[i]=arr[i]-3;
			}
			   else if(arr[i]%2!=0) {
				   arr[i] = arr[i]+3;
			}
		}
			for(int k=0;k<n;k++) {
				System.out.println(arr[k]);
			}	

	}

}
}
